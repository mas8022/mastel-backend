generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  phone    String  @unique
  username String  @unique
  bio      String? @db.Text
  avatar   String?

  lastSeen DateTime?
  isOnline Boolean   @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Otp {
  id    Int    @id @default(autoincrement())
  code  String
  phone String @unique

  createdAt DateTime @default(now())
}

model Session {
  id           Int    @id @default(autoincrement())
  sessionId    String @unique
  refreshToken String

  expiresAt DateTime
  createdAt DateTime @default(now())
}
