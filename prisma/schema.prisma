generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  phone    String  @unique
  username String  @unique
  bio      String? @db.Text
  avatar   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sentMessages     Message[] @relation("sender")
  receivedMessages Message[] @relation("receiver")
  firstUsers       Contact[] @relation("firstUser")
  secondUsers      Contact[] @relation("secondUser")
}

model Otp {
  id    Int    @id @default(autoincrement())
  code  String
  phone String @unique

  createdAt DateTime @default(now())
}

model Session {
  id           Int    @id @default(autoincrement())
  sessionId    String @unique
  refreshToken String

  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Message {
  id        Int         @id @default(autoincrement())
  type      MessageType

  text      String?

  fileUrl   String?
  fileKey   String?
  mimeType  String?
  size      Int?

  duration  Int?

  replyToId Int?
  replyTo   Message?  @relation("MessageReplies", fields: [replyToId], references: [id])
  replies   Message[] @relation("MessageReplies")

  senderId  Int
  sender    User @relation("sender", fields: [senderId], references: [id])

  receiverId Int
  receiver   User @relation("receiver", fields: [receiverId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([senderId, receiverId])
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  VOICE
  FILE
}

model Contact {
  id           Int  @id @default(autoincrement())
  firstUserId  Int
  firstUser    User @relation("firstUser", fields: [firstUserId], references: [id])
  secondUserId Int
  secondUser   User @relation("secondUser", fields: [secondUserId], references: [id])

  @@index([firstUserId, secondUserId])
}
